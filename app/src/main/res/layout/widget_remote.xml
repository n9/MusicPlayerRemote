<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:padding="0dp"
    android:layout_margin="@dimen/widget_margin"
    android:orientation="horizontal"
    android:background="@drawable/widget_background">

    <ImageButton
        android:id="@+id/widget_button_launch"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:src="@drawable/ic_launcher"
        android:background="@drawable/widget_button"
        android:scaleType="center"
        android:contentDescription="@string/widget_button_content_description" />
    
    <ImageButton
        android:id="@+id/widget_button_volume_down"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:src="@drawable/ic_volume_down"
        android:background="@drawable/widget_button"
        android:scaleType="center"
        android:contentDescription="@string/widget_button_content_description" />
    
    <ImageButton
        android:id="@+id/widget_button_volume_up"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:src="@drawable/ic_volume_up"
        android:background="@drawable/widget_button"
        android:scaleType="center"
        android:contentDescription="@string/widget_button_content_description" />

    <ImageButton
        android:id="@+id/widget_button_playpause"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:src="@drawable/ic_playpause"
        android:background="@drawable/widget_button"
        android:scaleType="center"
        android:contentDescription="@string/widget_button_content_description" />

    <ImageButton
        android:id="@+id/widget_button_next"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:src="@drawable/ic_next"
        android:background="@drawable/widget_button"
        android:scaleType="center"
        android:contentDescription="@string/widget_button_content_description" />

</LinearLayout>